<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaderConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hero_bg_gradient"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.asuscomm.douglaskirk.herome.Fragments.LeaderFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textViewLeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="High Score"
        android:textAlignment="center"
        android:textColor="#FAC740"
        android:textSize="24sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewLeaderLeft"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:width="125dp"
        android:gravity="left|center_horizontal"
        android:textAlignment="gravity"
        android:textColor="#FAC740"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewLeaderRight"
        app:layout_constraintTop_toBottomOf="@+id/textViewLeaderTitle" />

    <TextView
        android:id="@+id/textViewLeaderRight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:width="125dp"
        android:gravity="right|center_horizontal"
        android:textAlignment="gravity"
        android:textColor="#FAC740"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLeaderTitle"
        tools:layout_conversion_absoluteHeight="28dp"
        tools:layout_conversion_absoluteWidth="125dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>

